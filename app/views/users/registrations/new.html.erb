<div class="container-login">
  <h2 align="center">ユーザーの新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= bootstrap_devise_error_messages! %>


    <div class="field">
      <span class="badge badge-warning">必須</span> <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control",placeholder:"小野太郎" %>
    </div>

    <div class="field">
      <br>
      <span class="badge badge-warning">必須</span> <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",placeholder:"ono@example.com" %>
    </div>

    <div class="field">
      <br>
      <span class="badge badge-warning">必須</span> <%= f.label "性別" %>
      <br>
      <%= f.label "男性"  %>
      <%= f.radio_button :sex, :man %>
      <%= f.label "女性"  %>
      <%= f.radio_button :sex, :woman %>
    </div>

    <div class="field">
      <br>
      <span class="badge badge-warning">必須</span> <%= f.label :birthday %>
      <br>
      <%= f.date_select :birthday, use_month_numbers: true, start_year: Time.now.year, end_year: (Time.now.year - 120), default: Date.new(Time.now.month, Time.now.month, Time.now.day), autocomplete: "birthday", class:"form-control" %>
    </div>

    <div class="field">
      <br>
      <span class="badge badge-warning">必須</span> <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" , class:"form-control"%>
    </div>

    <div class="field">
      <br>
      <span class="badge badge-warning">必須</span> <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>

    <div class="actions">
      <br>
      <%= f.submit "登録",class: "btn btn-warning btn-block" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
  <%= link_to "店舗経営者の方", new_admin_session_path, class: 'btn btn-success btn-block' %>
</div>
