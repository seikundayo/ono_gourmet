<div class="container-login">
<h2 align="center">ユーザーアカウントの編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="field">
    <%= f.label "プロフィール写真" %>
    <br>
    <%= f.file_field :user_image %>
  </div>

  <div class="field">
    <br>
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control" %>
  </div>

  <div class="field">
    <br>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field">
    <br>
    <%= f.label "パスワード変更" %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field">
    <br>
    <%= f.label "変更パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
  </div>


  <div class="actions">
    <br>
    <%= f.submit "更新",class: "btn btn-warning btn-block" %>
  </div>
<% end %>

<hr>
<%= link_to "戻る", :back ,class: "btn btn-primary btn-block" %>
</div>
