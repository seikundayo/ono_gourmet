<%# ヘッダー画像　%>
<%= render 'topics/header_image' %>

<div class="topic_center">
  <%= render partial: "layouts/flash" %>
  <%# トピック記事検索機能　%>
  <%= render "topics/search" %>

  <%# トピックのリンク %>
  <%= render 'topics/list' %>

  <% if user_signed_in? %>
    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  <% else %>
    <%= link_to('Login', new_user_session_path) %>
  <% end %>

  <%# トピックの記事一覧 %>
  <%= render 'topics/content' %>

  <%# トピックの依頼投稿 %>
  <%= render 'topics/bottom' %>
</div>
