<div class="link_list">
  <h1>ディナー</h1>
  <div class="topic_content">
    <div class="row">
      <% @dinners.each do |dinner| %>
      <div class="col-md-4">
        <a href="/homes/<%= dinner.id %>">
        <div class="card">
        <%= image_tag "#{dinner.image}",id:"card_image" %>
        <div class="card-body">
          <p class="topic_genre"><i class="fas fa-hashtag"> <%= dinner.genre %></i></p>
          <p class="topic_title"><%= dinner.title %></p>
          <p class="topic_shop_name"><i class="fas fa-store"> <%= dinner.shop.name %></i></p>
          <p class="topic_address"><i class="fas fa-map-marker-alt"></i> <%= dinner.shop.address %></p>
          <p class="topic_day"><%= dinner.created_at.to_s(:datetime_jp) %></p>
        </div>
        </div>
        <div id="likes_<%= dinner.id %>" class="like_button" >
          <%= render partial: "topics/likes", locals: { topic: dinner } %>
        </div>
        </a>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="topic_page">
  <%= paginate @dinners %>
</div>
